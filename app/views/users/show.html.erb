<%= render 'info', user: @user %>
<%= render 'books/new', post: @post %>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= image_tag book.user.get_profile_image(100,100) %>
      </td>
      <td>
        <%=link_to book.title, book_path(book.id) %>
      </td>
      <td>
        <%= book.body %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

