<% if @update.errors.any? %>
  <%= @update.errors.count %> error prohibited this obj from being saved:
  <ul>
    <% @update.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<h1>Editing Book</h1>
<%= form_with model: @update do |f| %>
  <label for="inputTitle">Title</label>
  <%= f.text_field :title %>
  <label for="inputBody">Opinion</label>
  <%= f.text_area :body %>
  <%= f.submit "Update Book" %>
<% end %>

<div>
  <%= link_to "Show", book_path(@update.id) %>
  |
  <%= link_to "Back", books_path %>
</div>