<h1>Book detail</h1>

<table>
  <tbody>
    <tr>
      <td>
        <%= image_tag @book.user.get_profile_image(100,100) %>
        <%= link_to @book.user.name, user_path(@book.user_id) %>
      </td>
      <td>
        <%= @book.title %>
      </td>
      <td>
        <%= @book.body %>
      </td>
      <% if @book.user_id == current_user.id %>
      <td>
        <%= link_to "Edit", edit_book_path(@book.user_id) %>
      </td>
      <td>
        <%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に消しますか？" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<h1>New Book</h1>
  <%= form_with model: @post do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>