<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/info', user: @user %>
      <%= render 'new', post: @post %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= image_tag @book.user.get_profile_image(80,80) %>
              <%= link_to @book.user.name, user_path(@book.user_id) %>
            </td>
            <td>
              <%= @book.title %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <% if @book.user_id == current_user.id %>
            <td>
              <%= link_to "Edit", edit_book_path(@book.id) %>
            </td>
            <td>
              <%= link_to "Destroy", book_path, method: :delete, "data-confirm" => "本当に消しますか？" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>