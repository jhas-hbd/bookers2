<h1>Book detail</h1>
<div>
  <p><%= image_tag @book.user.get_profile_image(100,100) %></p>
  <p><%= @book.title %></p>
  <p><%= @book.body %></p>
  <% if @book.user_id == current_user.id %>
    <%= link_to "Destroy", book_path, method: :delete %>
  <% end %>
</div>

<h1>New Book</h1>
  <%= form_with model: @post do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>