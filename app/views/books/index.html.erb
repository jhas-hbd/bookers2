<h1>Books</h1>
<% @books.each do |book| %>
<div>
  <p>Title</p>
  <%= book.title %>
  <p>Opinion</p>
  <%= book.body %>
</div>
<% end %>

<h1>New Book</h1>
  <%= form_with model: @post do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>