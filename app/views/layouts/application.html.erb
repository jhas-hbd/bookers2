<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/0303429eff.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark p-0">
        <div class="container ">
          <a class="navbar-brand p-0" href="/">Bookers</a>
          <ul class="navbar-nav">
          <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to user_path(current_user.id), class: "nav-link text-light mb-o" do %>
              <p class="mb-0"><i class="fas fa-home"></i> Home</p>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to users_path, class: "nav-link text-light" do %>
              <p><i class="fas fa-users"></i> Users</p>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to books_path, class: "nav-link text-light" do %>
              <p><i class="fas fa-book-open"></i> Books</p>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-light" do %>
              <p><i class="fas fa-sign-out-alt"></i> Log out</p>
            <% end %>
          </li>
          <% else %>
          <li class="nav-item">
             <%= link_to root_path, class: "nav-link text-light" do %>
               <p><i class="fas fa-home"></i> Home</p>
             <% end %>
          </li>
          <li class="nav-item">
            <%= link_to about_path, class: "nav-link text-light" do %>
              <p><i class="fas fa-link"></i> About</p>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_user_registration_path, class: "nav-link text-light" do %>
              <p><i class="fas fa-user-plus"></i> Sign up</p>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_user_session_path, class: "nav-link text-light" do %>
              <p><i class="fas fa-sign-in-alt"></i> Log in</p>
            <% end %>
          </li>
          <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <main>
    <%= flash[:notice] %>
    <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
